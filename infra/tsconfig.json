{
  "compilerOptions": {
    "baseUrl": "./infra", // Set to the 'infra' directory as it's the root for module resolution
    "paths": {
      "lib/*": ["lib/*"] // Alias all modules under the 'lib' directory
    },
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}